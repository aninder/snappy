<!DOCTYPE html>
<html>
<head>
  <title>Snappy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container container-main">
    <%= render 'head' %>
    <%= render 'nav'%>
    <% if notice %>
      <span class="alert-info"><%= notice %></span>
    <%end%>
    <%= yield %>
</div>
</body>
</html>
